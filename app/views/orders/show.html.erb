<div class = "container">
  <div class = "row">
    <div class = "col-lg-12 mx-md auto">
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Product Serial Number</th>
            <th scope="col">Unit Price</th>
            <th scope="col">Quanitity</th>
          </tr>
        </thead>
        <tbody>
          <%@order.cart_items.each do |item|%>
            <tr>
              <td><%=item.product.name%><br></td>
              <td><%=item.product.serial_no%><br></td>
              <td><%=item.unit_price%></td>
              <td><%=item.quantity%></td>
            </tr>
          <%end%>
            <tr>
              <th scope= "row">Subtotal</th>
              <td>$<%=@order.subtotal%><br></td>
            </tr>
            <tr>
              <th scope= "row">Total</th>
              <%if @order.total == nil%>
                <td>$<%=@order.subtotal%><br></td>
              <% else %>
                <td>$<%=@order.total%><br></td>
              <%end%>
            </tr>
        </tbody>
      </table>

      <%= render 'form' ,order: @order%>
      <%= link_to 'pay now',payment_order_path(@order),class: "btn btn-primary",method: :post%>
    </div>
  </div>
</div>
