<div class= "container">
  <div class = "row">
    <div class = "col-lg-8 mx-md auto">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Brand:</strong>
        <%= @product.brand %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong>Serial Number:</strong>
        <%= @product.serial_no %>
      </p>
      <strong>Images:</strong>
      <% (0...(@product.images.count)).each do |image|%>
        <%= image_tag(@product.thumbnail(image)) %>
      <%end%>
      <%= render partial: "comments/form", locals: {product: @product}%>
        <strong>Comments</strong><br>
      <%= render "comments/comment",product: @product %>
      <% if policy(@cart_item).create?  %>
       <%= render "cart_items/form" ,cart_item: @cart_item, product: @product %>
      <% end %>
      <%= link_to 'Back', products_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
