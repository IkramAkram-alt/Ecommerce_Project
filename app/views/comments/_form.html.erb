<%= form_with(model: [product, product.comments.build], local: true) do |form| %>
  <% if policy(product.comments).create? %>
    <div class="form-group">
      <%= form.text_field :body,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit class: "btn btn-primary btn-lg"  %>
    </div>
  <%end%>
<% end %>
